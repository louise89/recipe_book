<h1>All recipes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Servings</th>
    <th>Time</th>
    <th colspan="2"></th>
  </tr>

  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.title %></td>
      <td><%= recipe.servings %></td>
      <td><%= recipe.time %></td>
      <td><%= link_to 'Show', recipe_path(recipe) %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe_path(recipe),
              method: :delete,
              data: {confirm: 'Are you sure?'}%></td>
    </tr>
  <% end %>
</table>
