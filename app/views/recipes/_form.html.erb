    <%= form.label :servings %><br>
    <%= form.text_field :servings %>
  </p>
  <p>
    <%= form.label :time %><br>
    <%= form.text_field :time %>
  </p>

<%= form.collection_select(:ingredient_id, Ingredient.all, :id, :ingredient) %>

  <p>
    <%= form.submit %>
  </p>

<% end %>
